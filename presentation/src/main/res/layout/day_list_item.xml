<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPressed">

    <TextView
        android:id="@+id/day_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:text="04:00"
        android:textColor="@color/textColorDefault"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/detail_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/day_list_time"
        android:background="@drawable/ic_waiting"
        android:scaleX="1"
        android:scaleY="1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/detail_image_view">

        <TextView
            android:id="@+id/day_list_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="14C"
            android:textColor="@color/textColorDefault"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/day_list_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:text="clear sky"
            android:textColor="@color/textColorDefault"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_toRightOf="@+id/day_list_temp"/>

        <TextView
            android:id="@+id/day_list_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:text="2.98 m/s"
            android:textColor="@color/textColorDefault"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/day_list_desc"/>

        <TextView
            android:id="@+id/day_list_clouds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="clouds: 12%"
            android:textColor="@color/textColorDefault"
            android:textSize="20dp"
            android:layout_below="@+id/day_list_temp"/>

        <TextView
            android:id="@+id/day_list_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:text="1020.93 hpa"
            android:textColor="@color/textColorDefault"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/day_list_clouds"
            android:layout_below="@+id/day_list_temp"/>

    </RelativeLayout>



</RelativeLayout>